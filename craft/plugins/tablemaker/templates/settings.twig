{% import "_includes/forms" as forms %}

<h2>Columns Table</h2>

{{ forms.textField({
  label: "Label"|t,
  id: 'columnsLabel',
  name: 'columnsLabel',
  value: settings.columnsLabel,
  errors: settings.getErrors('columnsLabel'),
}) }}

{{ forms.textareaField({
  label: "Instructions"|t,
  id: 'columnsInstructions',
